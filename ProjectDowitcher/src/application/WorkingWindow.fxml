<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.WorkingWindowController">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <TextField fx:id="textFieldCurTime" editable="false" prefWidth="100.0" promptText="(time in seconds)" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <Label text="Current Time:" BorderPane.alignment="CENTER_RIGHT" />
         </center>
         <left>
            <FlowPane BorderPane.alignment="CENTER">
               <children>
                  <Label text="Choose Chick:" />
                  <ComboBox fx:id="comboBoxChicks" prefWidth="150.0" />
               </children>
            </FlowPane>
         </left>
         <top>
            <FlowPane prefHeight="22.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnSetName" mnemonicParsing="false" onAction="#handleSetNameButton" text="Set Name">
                     <graphic>
                        <TextField fx:id="textfieldSetName" />
                     </graphic>
                  </Button>
               </children>
            </FlowPane>
         </top>
         <bottom>
            <BorderPane BorderPane.alignment="CENTER">
               <left>
                  <Button mnemonicParsing="false" onAction="#handleBackward" prefHeight="26.0" prefWidth="78.0" text="&lt;--" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Button mnemonicParsing="false" onAction="#handleForward" prefHeight="26.0" prefWidth="90.0" text="--&gt;" BorderPane.alignment="CENTER" />
               </right>
               <center>
                  <TextField fx:id="textfieldJumpTime" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="82.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </bottom>
      </BorderPane>
   </top>
   <bottom>
      <VBox BorderPane.alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" top="20.0" />
         </BorderPane.margin>
         <children>
            <BorderPane prefHeight="0.0" prefWidth="600.0">
               <left>
                  <Button fx:id="btnAutotrack" mnemonicParsing="false" onAction="#handleStartAutotracking" text="Start Auto-Tracking" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSave" text="Save Current Project" BorderPane.alignment="CENTER" />
               </right>
               <top>
                  <BorderPane prefHeight="20.0" prefWidth="720.0" BorderPane.alignment="CENTER">
                     <center>
                        <Slider fx:id="sliderVideoTime" prefHeight="14.0" prefWidth="573.0" BorderPane.alignment="CENTER" />
                     </center>
                     <left>
                        <Label fx:id="labelStartFrame" prefHeight="18.0" prefWidth="40.0" text="[insert]" BorderPane.alignment="CENTER" />
                     </left>
                     <right>
                        <Label fx:id="labelEndFrame" prefHeight="18.0" prefWidth="51.0" text="[Insert]" BorderPane.alignment="CENTER" />
                     </right>
                  </BorderPane>
               </top>
            </BorderPane>
            <FlowPane>
               <children>
                  <Label text="Progress: ">
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </Label>
                  <ProgressBar fx:id="progressAutoTrack" prefHeight="18.0" prefWidth="498.0" progress="0.0" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </FlowPane>
         </children>
      </VBox>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="videoCanvas" height="500.0" onMouseClicked="#handleCanvasClick" width="720.0" />
         </children>
      </VBox>
   </center>   
</BorderPane>
